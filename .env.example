# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=appname

# JWT Configuration
JWT_SECRET=your_very_strong_jwt_secret_key_minimum_32_characters

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS and SEO)
FRONTEND_URL=https://your-frontend-domain.com

# File Storage Configuration
DOCUMENT_STORAGE_PATH=../uploads/journals

# Cloudinary Configuration (REQUIRED - for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=your_project_folder_name
CLOUDINARY_SECURE=true

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# Google Drive Configuration (if using Google Drive for file storage)
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret
GOOGLE_DRIVE_REDIRECT_URI=your_google_drive_redirect_uri
GOOGLE_DRIVE_REFRESH_TOKEN=your_google_drive_refresh_token

# Security Configuration
CORS_ORIGIN=https://www.nijobed.com.ng

# SEO Configuration
SITE_NAME=NIJOBED
SITE_DESCRIPTION=Nigerian Journal of Business and Entrepreneurship Education
SITE_KEYWORDS=business education, entrepreneurship, academic journal, research, Nigeria
